 <ThingDef ParentName="ArmorMakeableBase">
    <defName>Apparel_ProtectiveGear</defName>
    <label>protective gear</label>
    <description>A heavy, non-power assisted protective gear. While it doesn't have defensive strength of power armor, this armor covers your whole body.</description>
    <techLevel>Industrial</techLevel>
    <recipeMaker>
        <researchPrerequisite>ComplexClothing</researchPrerequisite>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <graphicData>
      <texPath>Things/Apparel/ProtectiveGear</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <statBases>
      <WorkToMake>52000</WorkToMake>
      <MaxHitPoints>300</MaxHitPoints>
      <MarketValue>1680</MarketValue>
      <Mass>10</Mass>
      <ArmorRating_Blunt>0.20</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.60</ArmorRating_Sharp>
      <ArmorRating_Heat>0.30</ArmorRating_Heat>
      <Insulation_Cold>-25</Insulation_Cold>
    </statBases>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <equippedStatOffsets>
      <MoveSpeed>-1</MoveSpeed>
    </equippedStatOffsets>
    <costList>
      <Steel>185</Steel>
      <Component>8</Component>
    </costList>
      <generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
	    <li>Neck</li>
        <li>Shoulders</li>
        <li>Torso</li>
        <li>Arms</li>
        <li>Legs</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/ProtectiveGear</wornGraphicPath>
      <layers>
        <li>Middle</li>
        <li>Shell</li>
      </layers>
      <tags>
        <li>Outlander</li>
        <li>Military</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags> </apparel>
  </ThingDef>

