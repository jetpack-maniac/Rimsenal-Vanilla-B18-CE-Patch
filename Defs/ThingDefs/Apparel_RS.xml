<?xml version="1.0" encoding="utf-8" ?>
<Defs>

  <ThingDef ParentName="ArmorMakeableBase">
    <defName>Apparel_TacVest</defName>
    <label>tactical vest</label>
    <description>An ergonomically designed body armor. This type of armor increase wearer's combat efficiency.</description>
    <techLevel>Spacer</techLevel>
    <graphicData> <texPath>Things/Apparel/TacVest</texPath>
    <graphicClass>Graphic_Single</graphicClass> </graphicData>
    <statBases>
      <Mass>3.65</Mass>
      <WorkToMake>35000</WorkToMake>
      <MaxHitPoints>290</MaxHitPoints>
      <MarketValue>1000</MarketValue>
      <ArmorRating_Blunt>0.30</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.65</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
      <MoveSpeed>-0.04</MoveSpeed>
    </equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <costList>
      <Component>4</Component>
      <Plasteel>26</Plasteel>
    </costList>
      <generateCommonality>0.5</generateCommonality>
    <apparel>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
      <bodyPartGroups>
        <li>Torso</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/TacVest</wornGraphicPath>
      <layers>
        <li>Middle</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
    </apparel>
  </ThingDef>

  <ThingDef ParentName="ArmorHelmetMakeableBase">
    <defName>Apparel_TacHelmet</defName>
    <label>tactical helmet</label>
    <description>Advanced combat helmet designed specifically to protect the head during combat.</description>
    <graphicData> <texPath>Things/Apparel/TacHelmet</texPath>
    <graphicClass>Graphic_Single</graphicClass> </graphicData>
    <statBases>
      <Mass>1.62</Mass>
      <WorkToMake>21000</WorkToMake>
      <MaxHitPoints>220</MaxHitPoints>
      <MarketValue>500</MarketValue>
      <ArmorRating_Blunt>0.4</ArmorRating_Blunt>
      <ArmorRating_Sharp>0.4</ArmorRating_Sharp>
    </statBases>
    <equippedStatOffsets>
      <MoveSpeed>-0.01</MoveSpeed>
      <AimingDelayFactor>-0.05</AimingDelayFactor>
    </equippedStatOffsets>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
    </recipeMaker>
    <costList>
      <Component>2</Component>
      <Plasteel>17</Plasteel>
    </costList>
      <generateCommonality>0.5</generateCommonality>
    <apparel>
      <bodyPartGroups>
        <li>UpperHead</li>
      </bodyPartGroups>
      <wornGraphicPath>Things/Apparel/TacHelmet</wornGraphicPath>
      <layers>
        <li>Overhead</li>
      </layers>
      <tags>
        <li>Military</li>
      </tags>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
    </apparel>
  </ThingDef>

	<ThingDef ParentName="ArmorMakeableBase">
		<defName>Apparel_Exoframe</defName>
		<label>Exoframe</label>
		<description>A exoframe is a mobile machine that is powered by a system of motors, pneumatics, levers or hydraulics that allow for limb movement and assists the wearer by boosting their strength and endurance.</description>
		<graphicData> <texPath>Things/Apparel/Exo</texPath>
		<graphicClass>Graphic_Single</graphicClass> </graphicData>
		<tickerType>Normal</tickerType>
		<statBases>
      <Mass>6</Mass>
     			<WorkToMake>98000</WorkToMake>
			<MaxHitPoints>450</MaxHitPoints>
			<MarketValue>1150</MarketValue>
		</statBases>
		<equippedStatOffsets>
			<WorkSpeedGlobal>0.10</WorkSpeedGlobal>
			<MoveSpeed>1.2</MoveSpeed>
		</equippedStatOffsets>
    <thingCategories>
      <li>Apparel</li>
    </thingCategories>
    <costList>
      <Component>8</Component>
      <Plasteel>55</Plasteel>
    </costList>
    <recipeMaker>
      <unfinishedThingDef>UnfinishedTechArmor</unfinishedThingDef>
      <researchPrerequisite>PoweredArmor</researchPrerequisite>
    </recipeMaker>
			<generateCommonality>0.5</generateCommonality>
		<apparel>
<wornGraphicPath>Things/Apparel/Exo</wornGraphicPath>
			<layers>
			    <li>Shell</li>
			</layers>

			<bodyPartGroups>
				<li>Torso</li>
				<li>Arms</li>
				<li>Legs</li>
			</bodyPartGroups>
      <defaultOutfitTags>
        <li>Soldier</li>
      </defaultOutfitTags>
		</apparel>
	</ThingDef>

